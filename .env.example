# Example .env file for application configuration
# Copy this to .env and update with your actual values

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/myapp_db
# Other database URL examples:
# DATABASE_URL=mysql://user:password@localhost:3306/myapp_db
# DATABASE_URL=sqlite:///./app.db
# DATABASE_URL=mongodb://user:password@localhost:27017/myapp_db

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Debug Mode (set to true/false, yes/no, 1/0)
DEBUG_MODE=false

# Security - CHANGE THIS IN PRODUCTION!
SECRET_KEY=your-secret-key-here-change-in-production

# Application Settings
APP_NAME=MyAwesomeApp
LOG_LEVEL=INFO

# Additional environment-specific settings
# REDIS_URL=redis://localhost:6379/0
# CORS_ORIGINS=http://localhost:3000,https://myapp.com
# MAX_UPLOAD_SIZE=10485760