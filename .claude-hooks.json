{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "/tmp/claude_tool_hook.sh pre-tool $tool"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "/tmp/claude_tool_hook.sh post-tool $tool"
          }
        ]
      }
    ]
  }
}